# API Keys
OPENAI_API_KEY=<your-openai-api-key>
FIRECRAWL_API_KEY=<your-firecrawl-api-key>

# OpenAI Configuration
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7

# Optional: Firecrawl Configuration
# FIRECRAWL_BASE_URL="http://localhost:3002"

# Optional: LangSmith Configuration (for monitoring)
# LANGSMITH_API_KEY=<your-langsmith-api-key>
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_PROJECT=AdvancedResearch

OPENROUTER_API_KEY=<your-openrouter-api-key>
# Find all supported models here: https://openrouter.ai/models?order=newest
OPENROUTER_MODEL=anthropic/claude-3-opus

# Optional: Configure model parameters
OPENROUTER_TEMPERATURE=0.7
OPENROUTER_MAX_TOKENS=4000

TAVILY_API_KEY=<your-tavily-api-key>

CONTEXT_SIZE="128000"
# If you want to use other OpenAI compatible API, add the following below:
# OPENAI_ENDPOINT="http://localhost:11434/v1"
# OPENAI_MODEL="llama3.1"
